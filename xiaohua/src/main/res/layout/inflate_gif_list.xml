<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginTop="10dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title_inflate_gif"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:text="标题"
            android:textColor="#333"
            android:textSize="20sp" />

        <ImageView

            android:layout_marginTop="10dp"
            android:id="@+id/image_inflate_gif"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_title_inflate_gif"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/date_inflate_gif"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image_inflate_gif"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="2017/5/16" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/image_inflate_gif"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="100dp"
            android:layout_marginTop="10dp"
            android:src="@mipmap/damuzhi" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/image_inflate_gif"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="60dp"
            android:layout_marginTop="10dp"
            android:src="@mipmap/xin" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/image_inflate_gif"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            android:src="@mipmap/zhuanfa" />


    </RelativeLayout>
</android.support.v7.widget.CardView>